{
	"editor.fontFamily": "Verdana",
	"editor.fontSize": 14,
	"editor.fontLigatures": true,
	"files.trimTrailingWhitespace": true,
	"window.zoomLevel": 0,
	"explorer.confirmDragAndDrop": false,
	"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
	"files.autoSave": "onFocusChange",
	"editor.renderWhitespace": "boundary",
	"editor.renderControlCharacters": true,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/*.gcda": true,
		"**/*.gcno": true,
		"**/*.o": true
	},
	"files.trimFinalNewlines": true,
	"search.smartCase": true,
	"search.showLineNumbers": true,
	"telemetry.enableTelemetry": false,
	"editor.wordWrap": "off",
	"[markdown]": {
		"editor.wordWrap": "off"
	},
	// hit alt+z to disable it again if you accidently enabled it
	"editor.detectIndentation": true,
	"editor.autoClosingBrackets": "never",
	//* theme */
	"workbench.colorTheme": "Monokai",
	"workbench.colorCustomizations": {
		"[Monokai]": {
			"statusBar.background": "#252525",
			//"_panel.background": "#252525",
			//"sideBar.background": "#252525",
			"editor.background": "#252525",
			"menu.selectionBackground": "#49483E"
		}
	},
	"editor.tokenColorCustomizations": {
		"[Monokai]": {
			"comments": "#75715E",
			"strings": "#E6DB74",
			"numbers": "#AE81FF"
		},
	},
	/** extensions */
	"astyle.astylerc": "~/.astylerc",
	"rust.rustup": {
		"toolchain": "stable-x86_64-unknown-linux-gnu"
	},
	"rust.mode": "legacy",
	"extensions.ignoreRecommendations": true,
	"php.validate.executablePath": "/bin/php",
}